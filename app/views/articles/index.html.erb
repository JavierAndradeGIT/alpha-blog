<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="utf-8">
    <title>Index</title>    
  </head>
  <body>

    <h1>Articles Listing</h1>

    <table>
      <thead>
        <tr>
          <th>Title</th>
          <th>Description</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @articles.each do |article| %>
          <tr>
            <th> <%= article.title %> </th>
            <th> <%= article.description %> </th>
            <th> Placeholder </th>
          </tr>
        <% end %>
      </tbody>
    </table>

  </body>
</html>