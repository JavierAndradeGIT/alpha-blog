 <div class="container">
  <%= form_with(model: @user, local: true) do |f| %>
    <div class="form-group row mt-5">
      <%= f.label :username, class: "col-sm-2 col-form-label" %>
      <div class="col-10">
        <%= f.text_field :username, class: "form-control", placeholder: "username" %>
      </div>
    </div>
    <div class="form-group row">
      <%= f.label :email, class: "col-sm-2 col-form-label" %>
      <div class="col-10">
        <%= f.email_field :email, class: "form-control", placeholder:"e-mail" %>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label :password, class: "col-sm-2 col-form-label" %>
      <div class="col-10">
        <%= f.password_field :password, class: "form-control", placeholder:"password" %>
      </div>
    </div>

    <div class="form-group row justify-content-center">
      <%= f.submit class: "btn btn-outline-light btn-md"  %>
    </div>
  <% end %>
  <div class="row justify-content-center">
    <%= link_to '[ Return ]', articles_path %>
  </div>
  <%= render 'shared/errors', obj: @user%>
</div>



